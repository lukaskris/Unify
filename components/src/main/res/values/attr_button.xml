<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="UnifyButton">
        <attr name="unifyButtonVariant" format="enum">
            <enum name="filled" value="1"/>
            <enum name="ghost" value="2"/>
            <enum name="text" value="3"/>
        </attr>
        <attr name="unifyButtonSize" format="enum">
            <enum name="large" value="1"/>
            <enum name="medium" value="2"/>
            <enum name="small" value="3"/>
            <enum name="micro" value="4"/>
        </attr>
        <attr name="unifyButtonType" format="enum">
            <enum name="main" value="1"/>
            <enum name="secondary" value="2"/>
            <enum name="alternate" value="3"/>
        </attr>
        <attr name="unifyButtonInverse" format="boolean"/>
        <attr name="unifyButtonRightLoader" format="boolean"/>
        <attr name="unifyButtonLoadingText" format="string"/>
        <attr name="unifyButtonLoadingState" format="boolean"/>
        <attr name="unifyButtonRadius" format="dimension"/>
        <attr name="unifyButtonLeftDrawable" format="reference"/>
        <attr name="unifyButtonRightDrawable" format="reference"/>
        <attr name="unifyButtonColorPrimary" format="color|integer"/>
        <attr name="unifyButtonColorSecondary" format="color"/>
    </declare-styleable>
</resources>