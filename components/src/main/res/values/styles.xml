<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="UnifyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/textfieldunify_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="UnifyButtonStyle" parent="">
        <item name="unifyButtonColorPrimary">@color/Unify_G500</item>
        <item name="unifyButtonColorSecondary">@color/Unify_Y500</item>
    </style>

    <style name="UnifyBottomSheetNotOverlapStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="UnifyBottomSheetOverlapStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="UnifyBottomsheetWindowAnimation" parent="@android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/unify_bottomsheet_show</item>
        <item name="android:windowExitAnimation">@anim/unify_bottomsheet_hide</item>
    </style>

    <style name="SearchBar" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/Unify_N700_68</item>
        <item name="android:textColorHint">@color/searchbarunify_hint_color</item>
    </style>

</resources>