<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TextFieldUnify">
        <attr name="unify_text_field_label" format="string"/>
        <attr name="unify_text_field_message" format="string"/>
        <attr name="unify_text_field_counter" format="integer" />
        <attr name="unify_text_field_prepend_text" format="string" />
        <attr name="unify_text_field_append_text" format="string" />
        <attr name="unify_text_field_append_url_icon_1" format="string" />
        <attr name="unify_text_field_append_url_icon_2" format="string" />
        <attr name="unify_text_field_append_drawable_icon_1" format="reference" />
        <attr name="unify_text_field_append_drawable_icon_2" format="reference" />
        <attr name="unify_text_field_color_state_stroke" format="color" />
        <attr name="unify_text_field_input_type">
            <flag name="text" value="1" />
            <flag name="number" value="2" />
            <flag name="phone" value="3" />
            <flag name="textEmailAddress" value="32" />
            <flag name="textPassword" value="128" />
            <flag name="numberSigned" value="4096" />
            <flag name="numberDecimal" value="8192" />
        </attr>
        <attr name="unify_text_field_label_static" format="boolean"/>
        <attr name="unify_text_field_placeholder" format="string"/>
        <attr name="unify_text_field_maxline" format="integer"/>
        <attr name="unify_text_field_clearable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TextAreaUnify">
        <attr name="unify_text_area_label" format="string"/>
        <attr name="unify_text_area_message" format="string"/>
        <attr name="unify_text_area_counter" format="integer" />
        <attr name="unify_text_area_prepend_text" format="string" />
        <attr name="unify_text_area_append_text" format="string" />
        <attr name="unify_text_area_append_url_icon_1" format="string" />
        <attr name="unify_text_area_append_url_icon_2" format="string" />
        <attr name="unify_text_area_append_drawable_icon_1" format="reference" />
        <attr name="unify_text_area_append_drawable_icon_2" format="reference" />
        <attr name="unify_text_area_color_state_stroke" format="color" />
        <attr name="unify_text_area_input_type">
            <flag name="text" value="1" />
            <flag name="number" value="2" />
            <flag name="phone" value="3" />
            <flag name="textEmailAddress" value="32" />
            <flag name="textPassword" value="128" />
            <flag name="numberSigned" value="4096" />
            <flag name="numberDecimal" value="8192" />
        </attr>
        <attr name="unify_text_area_label_static" format="boolean"/>
        <attr name="unify_text_area_placeholder" format="string"/>
        <attr name="unify_text_area_maxline" format="integer"/>
        <attr name="unify_text_area_clearable" format="boolean"/>
    </declare-styleable>
</resources>