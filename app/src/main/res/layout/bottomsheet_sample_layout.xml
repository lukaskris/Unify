<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
                android:gravity="top|left"
                android:layout_weight="50"
                android:orientation="vertical"
                android:id="@+id/btmsheet_sample_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:text="BottomSheet - Dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button
                    android:id="@+id/show_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textAllCaps="false" />

            <Button
                    android:id="@+id/show_title_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title - Full"
                    android:textAllCaps="false" />

            <Button
                    android:id="@+id/show_title_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title + Action"
                    android:textAllCaps="false" />

            <Button
                    android:id="@+id/show_title_action_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title + Action - Full"
                    android:textAllCaps="false" />

            <Button
                    android:id="@+id/show_without_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Without Header"
                    android:textAllCaps="false" />

            <Button
                    android:id="@+id/show_without_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Without close"
                    android:textAllCaps="false" />


            <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkedButton="@id/rb_200"
                    android:orientation="horizontal">

                <RadioButton
                        android:id="@+id/rb_200"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200" />

                <RadioButton
                        android:id="@+id/rb_350"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="350" />

                <RadioButton
                        android:id="@+id/rb_500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500" />
            </RadioGroup>

            <Button
                    android:textAllCaps="false"
                    android:id="@+id/custom_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show custom height" />

            <Button
                    android:textAllCaps="false"
                    android:id="@+id/dragable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dragable" />

            <FrameLayout
                    android:id="@+id/placeholder"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                />

        </LinearLayout>

        <LinearLayout
                android:layout_gravity="top|right"
                android:layout_weight="50"
                android:id="@+id/btmsheet_sample_right"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:text="BottomSheet - Behavior"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btm_behav"
                    android:text="Knob" />

            <Button
                    android:textAllCaps="false"
                    android:id="@+id/btm_behav_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title" />

            <Button
                    android:text="Title + Action Text"
                    android:id="@+id/btm_behav_action"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button
                    android:text="Title + Action Icon"
                    android:id="@+id/btm_behav_action_icon"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button
                    android:text="Title + Action Icon Text"
                    android:id="@+id/btm_behav_action_icon_text"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    <include layout="@layout/bottom_sheet_layout" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>